<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat">

    <LinearLayout
        android:layout_width="281dp"
        android:layout_height="65dp"
        android:background="#2AB1A2"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="555dp"></LinearLayout>

    <LinearLayout
        android:layout_width="293dp"
        android:layout_height="64dp"
        android:background="#2357D3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="456dp"></LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="76dp"
        android:layout_height="69dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="51dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Rogelio"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="156dp" />

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="63dp"
        android:background="#30CAB1"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="142dp"></LinearLayout>

    <LinearLayout
        android:layout_width="293dp"
        android:layout_height="64dp"
        android:background="#2357D3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="244dp"></LinearLayout>

    <LinearLayout
        android:layout_width="281dp"
        android:layout_height="65dp"
        android:background="#2AB1A2"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="348dp"></LinearLayout>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Escribe el mensaje"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="649dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="650dp" />

</androidx.constraintlayout.widget.ConstraintLayout>